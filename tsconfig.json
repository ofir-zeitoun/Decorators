{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": true,
      "removeComments": true,
      "outDir": "dist",
      "target": "es2017",
      "experimentalDecorators": true
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ],
  "formatCodeOptions": {
      "indentSize": 2,
      "tabSize": 2
  }
}